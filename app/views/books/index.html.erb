<div>
  <h1 class='d-inline'>Books</h1>
  <%= link_to "Upload", new_book_path, class: "btn btn-primary float-end" if current_user&.is_admin %>
</div>
<div id="books">
  <div class='row row-cols-5 g-4'>
    <%= render @books, simple: true %>
    <% if @books.empty? %>
    <p>No books!</p>
    <% end %>
  </div>
</div>
