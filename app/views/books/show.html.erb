<%= render @book do %>
  <%= link_to "Back to books", books_path, class:'btn btn-light' %>
  <% if current_user %>
    <%= button_to @book.users.include?(current_user) ? 'Bookmarked' : 'Bookmark',  
        bookmark_path, method: :patch, params: {book_id: @book.id} ,class: 'w-100 btn btn-light' %>
    <% if current_user.is_admin? %>
      <%= link_to 'Edit this book', edit_book_path, class:'btn btn-light' %>
      <%= button_to 'Delete this book', @book, method: :delete, class: 'w-100 btn btn-danger'%>
    <% end %>
  <% end %>
<% end %>
