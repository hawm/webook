<div class='row'>
  <div class='col'>
    <%= render @user %>
  </div>
  <% if current_user&.is_admin %>
    <div class='col-3'>
      <div class='d-grid gap-2'>
      <%= link_to "Edit this user", edit_user_path(@user), class: 'btn btn-light d-block' %>
      <%= link_to "Back to users", users_path, class: 'btn btn-light d-block' %>
      <%= button_to "Destroy this user", @user, method: :delete, class: 'btn btn-danger w-100' %>
      </div>
    </div>
  <% end %>
</div>
